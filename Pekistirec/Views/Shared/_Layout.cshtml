                                            </div>
                                        </a>
                                    </li>
                                }

                                <li></li>
                            </ul>
                        </li>*@
                    <li class="light-blue">
                        <a data-toggle="dropdown" href="#" class="dropdown-toggle">
                            <img class="nav-user-photo" src="@userProfilPicture" alt="Jason's Photo" />
                            <span class="user-info">
                                <small>Hoşgeldin,</small>
                                @user.UserName
                            </span>

                            <i class="icon-caret-down"></i>
                        </a>

                        <ul class="user-menu pull-right dropdown-menu dropdown-yellow dropdown-caret dropdown-close">
                            <li>
                                <a href="/Profil">
                                    <i class="icon-user"></i>
                                    Profil
                                </a>
                            </li>

                            @*<li>
                                <a href="/Ayarlar">
                                    <i class="icon-cog"></i>
                                    Ayarlar
                                </a>
                            </li>*@

                            <li>
                                <a href="/Account/Manage">
                                    <i class="icon-key"></i>
                                    Şifre Değiştir
                                </a>
                            </li>

                            <li class="divider"></li>

                            <li>
                                <a href="#" id="id-btn-dialog2" @*class="btn btn-info btn-sm"*@>
                                    <i class="icon-off"></i>
                                    Logout
                                </a>
                                <div id="dialog-confirm" class="hide">
                                    @*<div class="alert alert-info bigger-110">
                                            These items will be permanently deleted and cannot be recovered.
                                        </div>*@

                                    <div class="space-6"></div>

                                    <p class="bigger-110 bolder center grey">
                                        <i class="icon-hand-right blue bigger-120"></i>
                                        Emin misiniz?
                                    </p>
                                </div><!-- #dialog-confirm -->
                                @*<a href="#">
                                        <i class="icon-off"></i>
                                        Logout
                                    </a>*@
                            </li>
                        </ul>
                    </li>
                </ul><!-- /.ace-nav -->
            </div><!-- /.navbar-header -->
        }
        </div><!-- /.container -->
    </div>

    <div class="main-container" id="main-container">
        <script type="text/javascript">
            try { ace.settings.check('main-container', 'fixed') } catch (e) { }
        </script>

        <div class="main-container-inner">
            <a class="menu-toggler" id="menu-toggler" href="#">
                <span class="menu-text"></span>
            </a>

            <div class="sidebar" id="sidebar">
                <script type="text/javascript">
                    try { ace.settings.check('sidebar', 'fixed') } catch (e) { }
                </script>



                <ul class="nav nav-list">
                    <li class="active open">
                        <a href="#" class="dropdown-toggle">
                            <i class="icon-briefcase"></i>
                            <span class="menu-text"> DÖKUMAN</span>

                            <b class="arrow icon-angle-down"></b>
                        </a>

                        @{
                            bool dokuman = false;
                            bool dokumanYukle = false;
                            bool dokumanRehber = false;

                            if (Request.Url.LocalPath.ToLower().StartsWith("/dokuman"))
                            {
                                dokuman = true;                                
                            }

                            if (Request.Url.LocalPath.ToLower().StartsWith("/dokuman/yukle"))
                            {
                                dokuman = false;
                                dokumanYukle = true;
                            }

                            if (Request.Url.LocalPath.ToLower().StartsWith("/dokuman/rehber"))
                            {
                                dokuman = false;
                                dokumanRehber = true;
                            }
                        }

                        <ul class="submenu">
                            <li @Html.Raw(dokuman ? "class=\"active\"" : "")>
                                <a href="/dokuman">
                                    <i class="icon-double-angle-right"></i>
                                    <i class="icon-copy"></i>
                                    Listele
                                </a>
                            </li>

                            <li @Html.Raw(dokumanYukle ? "class=\"active\"" : "")>
                                <a href="/dokuman/yukle">
                                    <i class="icon-double-angle-right"></i>
                                    <i class="icon-cloud-upload"></i>
                                    Ekle
                                </a>
                            </li>
                            <li @Html.Raw(dokumanRehber ? "class=\"active\"" : "")>
                                <a href="/dokuman/rehber">
                                    <i class="icon-double-angle-right"></i>
                                    <i class="icon-book"></i>
                                    Rehber
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul><!-- /.nav-list -->

                <div class="sidebar-collapse" id="sidebar-collapse">
                    <i class="icon-double-angle-left" data-icon1="icon-double-angle-left" data-icon2="icon-double-angle-right"></i>
                </div>

                <script type="text/javascript">
                    try { ace.settings.check('sidebar', 'collapsed') } catch (e) { }
                </script>
            </div>

            <div class="main-content">


                <div class="page-content">
                    <div class="row">
                        <div class="col-xs-12">
                            <!-- PAGE CONTENT BEGINS -->
                            @RenderBody()
                            <!-- PAGE CONTENT ENDS -->
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.page-content -->
            </div><!-- /.main-content -->
        </div><!-- /.main-container-inner -->        
    </div><!-- /.main-container -->
    <!-- basic scripts -->
    <!--[if !IE]> -->

    <script type="text/javascript">
        window.jQuery || document.write("<script src='/assets/js/jquery-2.0.3.min.js'>" + "<" + "/script>");
    </script>

    <!-- <![endif]-->
    <!--[if IE]>
    <script type="text/javascript">
     window.jQuery || document.write("<script src='/assets/js/jquery-1.10.2.min.js'>"+"<"+"/script>");
    </script>
    <![endif]-->

    <script type="text/javascript">
        if ("ontouchend" in document) document.write("<script src='/assets/js/jquery.mobile.custom.min.js'>" + "<" + "/script>");
    </script>    

    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/typeahead-bs2.min.js"></script>
    <script src="/assets/js/jquery-ui-1.10.3.full.min.js"></script>
    <script src="/assets/js/jquery.ui.touch-punch.min.js"></script>

    <script type="text/javascript">
        AddAntiForgeryToken = function (data) {
            data.__RequestVerificationToken = $('#__AjaxAntiForgeryForm input[name=__RequestVerificationToken]').val();
            return data;
        };
    </script>

    <!-- page specific plugin scripts -->
    @RenderSection("page_specific_plugin_scripts", required: false)
    <!-- ace scripts -->

    <script src="/assets/js/ace-elements.min.js"></script>
    <script src="/assets/js/ace.min.js"></script>

    <!-- inline scripts related to this page -->
    @RenderSection("inline_scripts_related_to_this_page", required: false)

    <script type="text/javascript">        
        jQuery(function ($) {            
            //$(window).resize(function () {
            //    $('.page-content').height($(window).height() - $('.page-content').offset().top);
            //});
            //$(window).resize();

            $("#id-btn-dialog2").on('click', function (e) {
                e.preventDefault();

                $("#dialog-confirm").removeClass('hide').dialog({
                    resizable: false,
                    modal: true,
                    title: "Onay",
                    title_html: true,
                    buttons: [
                        {
                            html: "<i class='icon-off bigger-110'></i>&nbsp; Çıkış Yap",
                            "class": "btn btn-danger btn-xs",
                            click: function () {
                                $.post("/account/LogOff", AddAntiForgeryToken({ id: parseInt($(this).attr("title")) })).done(function () { window.location.replace("/"); location.reload(); });

                            }
                        }
                        ,
                        {
                            html: "<i class='icon-remove bigger-110'></i>&nbsp; İptal",
                            "class": "btn btn-xs",
                            click: function () {
                                $(this).dialog("close");
                            }
                        }
                    ]
                });
            });
        });
    </script>



</body>
</html>


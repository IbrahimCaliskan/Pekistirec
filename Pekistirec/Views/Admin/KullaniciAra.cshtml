@model List<DataLayer.DomainClasses.BaseDomainClasses.AspNetUser>
@{
	ViewBag.Title = "KullaniciAra";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
	<h1>
		Kullanıcı Ara
		<small>
			<i class="icon-double-angle-right"></i>
		</small>
	</h1>
</div>


@using(Html.BeginForm())
{
<div class="row">
	<div class="input-group col-lg-6">
		<input name="text" class="form-control search-query" placeholder="Kullanıcı Adını Girin" type="text">
		<span class="input-group-btn">
			<button type="submit" class="btn btn-purple btn-sm">
				Kullanıcı Ara
				<i class="icon-search icon-on-right bigger-110"></i>
			</button>
		</span>
	</div>
</div>    
}

<div class="space-4"></div>
<div class="col-lg-6">

	@if (Model != null)
	{
		if (Model.Count > 0)
		{

			<table class="table table-striped table-bordered table-hover">
				<thead>
					<tr>
						<th class="col-lg-6">ID</th>
						<th class="col-lg-6">UserName</th>
					</tr>
				</thead>
				<tbody>
					@for (int i = 0; i < Model.Count; i++)
					{
						<tr>
							<td>
								@Html.Label(Model[i].Id)
							</td>
							<td>
								@Html.ActionLink(Model[i].UserName, "KullaniciAyrinti", new { id = Model[i].Id.ToString() })
							</td>
						</tr>

					}
				</tbody>
			</table>
		}
	}
</div>
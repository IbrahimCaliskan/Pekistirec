@model Pekistirec.Models.DokumanModels.DokumanYuklediklerimViewModel
@{
    ViewBag.Title = "Yuklediklerim";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var codeBehind = new Pekistirec.Views.Dokuman.YuklediklerimCodebehind(Model);
    List<string> dokumanIsimleri = codeBehind.DokumanIsimleri;
    List<string> dokumanDuzenleLinkleri = codeBehind.DokumanDuzenleLinkleri;
    List<string> dokumanPaylasimLinkleri = codeBehind.DokumanPaylasimLinkleri;
    List<string> dokumanOnayDurumlari = codeBehind.DokumanOnayDurumlari;
    List<string> dokumanOnayDurumlariClass = codeBehind.DokumanOnayDurumlariClass;
}

<div class="page-header">
    <h1>
        Yüklediklerim
        <small>
            <i class="icon-double-angle-right"></i>
        </small>
    </h1>
</div>

@if(Model.Dokumanlar != null)
{ 

<div class="row">
    <div class="col-xs-12">
        <div class="table-responsive">
    <table id="sample-table-1" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th></th>
                <th>Döküman</th>
                <th>Onay</th>
                <th class="hidden-480">Paylaşım Linki</th>                
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Dokumanlar.Count; i++)
            {
                <tr>
                    <td class="center">
                        
                            <a class="btn btn-xs btn-info" href="@dokumanDuzenleLinkleri[i]">
                                <i class="icon-edit bigger-120"></i>
                            </a>
                        
                    </td>    
                        <td> @dokumanIsimleri[i] </td>
                        <td><span class="label label-sm @dokumanOnayDurumlariClass[i]">@dokumanOnayDurumlari[i]</span></td>
                        <td>@dokumanPaylasimLinkleri[i]</td>                        
                    </tr>
                    }
                </tbody>
            </table>
        </div><!-- /.table-responsive -->
    </div><!-- /span -->
</div>
}